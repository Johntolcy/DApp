<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"

    package="com.example.dapp">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="DApp"
        android:roundIcon="@mipmap/ic_launcher_round"

        android:supportsRtl="true"

        android:theme="@style/AppTheme"
        tools:replace="android:icon, android:label,android:theme">
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.example.dapp.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity
            android:name=".Login_App"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainAll"
            android:label="糖App" />
        <activity
            android:name=".FruitMainActivity"
            android:label="食物搜索"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".FruitSelect" />
        <activity android:name=".FruitSearch" />
        <activity android:name=".SearchNullResult" />
        <activity
            android:name=".Register_main"
            android:label="用户注册"
            android:launchMode="singleTask" />
        <activity
            android:name=".Food_record_add"
            android:label="添加记录" />
        <activity
            android:name=".Food_Record_all"
            android:label="饮食管理" />

        <activity
            android:name=".Register_career"
            android:label="职业选择" />
        <!--<activity android:name=".ScaleRuler_tall_weight"></activity>-->
        <activity
            android:name=".User_info_All"
            android:label="个人信息" />
        <activity
            android:name=".Food_searchToAdd"/>

    </application>

</manifest>